<%= form_for(@product) do |f| %>

  <div class="field">

    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :description %><br>
      <%= f.text_field :description %>
    </p>

    <p>
      <%= f.label :price_in_cents %><br>
      <%= f.number_field :price_in_cents %>
    </p>

    <p>
      <%= f.submit %>
    </p>

  </div>
<% end  %>
