<h1>Products List</h1>

<%= link_to "New Product", "/products/new" %>

<% @products.each do |product| %>

  <h3><%=link_to product.name, product %></h3>
    <ul>
      <li>Description: <%= product.description %></li>
      <li>Price: <%= product.price_in_cents %></li>
    </ul>
    <%= link_to "Edit", edit_product_path(product) %> | <%= link_to "Delete", product, method: :delete, data: {confirm: "Are you sure you want to delete this picture?"}  %>

<% end %>
